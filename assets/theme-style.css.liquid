.hide-select:after,.hide-select:before{display:none!important}
.size-modal-tlt,.size-modal-txt p{text-align:center}
.size-modal-txt p{margin-bottom:4rem}
.f-payment{display:flex;margin-bottom:0}
.f-lang{flex-shrink:0}
.f-lang>div{margin-bottom:20px;width:300px!important}
.f-footer{display:flex;width:100%}
.f-menu>li>a{font-size:1.25rem;line-height:1.5;font-weight:700;color:#2d2d2d;pointer-events:none}
.f-menu-sub{margin:1rem 2rem 0 0}
.f-menu-sub a{font-size:1.1rem;transition:all .5s;line-height:1.3em}
.f-menu-sub a:hover{color:#4f4128}
.wrap-footer .wrap-select-box .selectize-input{height:36px}
.wrap-footer .wrap-select-box .selectize-input .item{font-size:1.3rem}
.wrap-footer .wrap-select-box:before{content:'\f0d8';top:6px}
.wrap-footer .footer-top{padding:4rem 0 1.5rem}
@media (max-width: 991px) {
.site-footer>.container{max-width:100%}
.f-menu>li>a{font-size:1.3rem}
.f-menu-sub a{font-size:1.2rem}
}
@media (max-width: 767px) {
.product-detail #size-modal{width:calc(100% - 15px);height:auto;margin:0 auto}
.f-payment{justify-content:center;margin-bottom:2rem}
.f-lang>div{width:auto!important}
.f-footer{justify-content:center}
.f-footer>.f-menu:last-child .f-menu-sub{margin-right:0}
}