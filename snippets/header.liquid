</header>
<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <a  href="/collections/all-products">Best Selling</a>
  <a data-toggle="collapse" href="#collectionCollapse" role="button" aria-expanded="false" aria-controls="collectionCollapse">Collection</a>
  <div class="collapse" id="collectionCollapse">
    <div class="card card-body">

      {% for link in linklists.main-menu.links %}
        {% if link.handle == "latest-designs" %}
          {% for child_link in linklists[link.handle].links %}
            {% if haveSubMenu contains child_link.handle%}
                <a data-toggle="collapse" href="#{{child_link.handle}}" role="button" aria-expanded="false" aria-controls="{{child_link.handle}}">{{child_link.title}}</a>
                <div class="collapse" id="{{child_link.handle}}">
                  <div class="card card-body">
                    {% for item in linklists[child_link.handle].links %}
                      <a class="" href="{{item.url}}">{{item.title}}</a>
                    {% endfor %}
                  </div>
                </div>
            {% else %}
              <a class="text-white" href="{{child_link.url}}">{{child_link.title}}</a>
            {% endif %}
          {% endfor %}
        {% endif %}
      {% endfor %}
      
    </div>
  </div>
  <a href="/blogs/wicca">Blogs</a>
  <a href="/pages/contact-us">Contact</a>
</div>
<script>
  function openNav() {
    document.getElementById("mySidenav").style.width = "100%";
  }

  function closeNav() {
    document.getElementById("mySidenav").style.width = "0";
  }
</script>
