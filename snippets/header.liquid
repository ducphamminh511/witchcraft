        <div class="input-group w-100 my-auto">
          <form action="/search" method="get" class="input-group search-bar" role="search">
            <input class="form-control py-2 search-form border-right-none" type="text" name="q" value="{{ search.terms | escape }}" placeholder="What are you looking for?"
              id="example-search-input">
            <span class="input-group-append ">
              <button class="btn btn-outline-secondary search-form border-left-none" type="submit">
                <i class="fa fa-search"></i>
              </button>
            </span>
          </form>
        </div>
        <!-- <p class="m-0">Trending searches: </p> -->

      </div>
      <div class="col-md-7 my-auto">
        <div class="nav-container d-flex">
          <div class="dropdown my-auto mx-4">
            <div class="nav-menu menu-text">
              <a class="menu-text mb-0" href="/collections/all-products">Best selling</a>
            </div>
          </div>
          <div class="dropdown my-auto mx-4">
            <div class="nav-menu menu-text">Collection</div>
            <div class="dropdown-content">
              <div class="secret-part"></div>
              <div class="menu-part">
                <div class="dropdown-content-container">
                  <div class="row pt-5">
                    <div class="col-3">
                      <h2 class="menu-heading">Collections</h1>
                    </div>
                    <div class="col-8">
                      <div class="row">
                        {% assign haveSubMenu = "home-decor,type-of-witch,popular-quotes" | split: ','%}
                        {% assign noSubMenu = "frightful-design,witch-clothing,mug" | split: ',' %}
                        
                        <div class="col-3" style="display: grid;">
                          {% for link in linklists.main-menu.links %}
                            {% if link.handle == "latest-designs" %}
                              {% for child_link in linklists[link.handle].links %}
                                {% if noSubMenu contains child_link.handle%}
                                  <a class="menu-name" href="{{child_link.url}}">{{child_link.title}}</a>
                                {% endif %}
                              {% endfor %}
                            {% endif %}
                          {% endfor %}
                        </div>
                        {% for link in linklists.main-menu.links %}
                            {% if link.handle == "latest-designs" %}
                              {% for child_link in linklists[link.handle].links %}
                                {% if haveSubMenu contains child_link.handle%}
                                  <div class="col-3" style="display: grid;">
                                    <a class="menu-name" href="{{child_link.url}}">{{child_link.title}}</a>
                                      {% for item in linklists[child_link.handle].links %}
                                      <a class="menu-item" href="{{item.url}}">{{item.title}}</a>
                                      {% endfor %}
                                  </div>
                                  
                                {% endif %}
                              {% endfor %}
                            {% endif %}
                          {% endfor %}
                        
                        
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
          <div class="dropdown my-auto mx-4">
            <div class="nav-menu menu-text">
              <a class="menu-text mb-0" href="/blogs/wicca">Blogs</a>
            </div>
          </div>
          <div class="dropdown my-auto mx-4">
            <div class="nav-menu menu-text">
              <a class="menu-text mb-0" href="/pages/contact-us">Contact</a>
            </div>
          </div>
