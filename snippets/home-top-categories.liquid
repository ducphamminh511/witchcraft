<section id="top-categories">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="header-title">
          <h3 class="text-capitalize font-weight-semibold">{{settings.categories_section_title}}</h3>
        </div>
      </div>
      {% for link in linklists.all-collections.links | limit: settings.categories_number %}
        {% assign collection = link.object %}
        <div class="col-4 col-md-3 col-xl-2 cat-col">
        <a rel="nofollow" href="{{collection.url}}" >
          <div class="wrap-cat">
            <div class="cat-img"><img class="mw-100" src="{{ collection.products.first | img_url: "large" }}"></div>
            <div class="cat-info text-center">
              <h4 class="font-weight-semibold text-capitalize">{{ collection.title }}</h4>
            </div>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>