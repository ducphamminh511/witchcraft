 <section id="recommended">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <div class="header-title">
                <h3 class="text-capitalize font-weight-semibold">{{settings.recommended_section_title}}</h3>
              </div>
            </div>
                <div class="wrap-product-scroll">
                    <div class="row">
                        {% for product in collections[settings.recommended_collection].products | limit: settings.recommended_products_number %}
                            <div class="col-3">
                                <a rel="nofollow" href="{{ product.url }}">
                                    <div class="wrap-product">
                                        <div class="product-img text-center"><img class="mw-100" src="{{ product | img_url:'large' }}"/></div>
                                        <div class="product-info">
                                            <p class="mb-0 text-capitalize">{{ product.title }}</p>
                                        </div>
                                        <div class="product-prices d-flex justify-content-start">
                                            <p class="mb-0 red font-weight-bold sale"><span>{{ product.price | money_without_trailing_zeros }}</p>
                                            <p class="mb-0 original"><span>{{ product.compare_at_price_max | money_without_trailing_zeros}}</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>


                </div>

          </div>
        </div>
      </section>